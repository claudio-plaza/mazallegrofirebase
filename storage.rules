rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isAdmin() {
      return request.auth != null && 
             firestore.get(/databases/(default)/documents/adminUsers/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isStaff() {
      return request.auth != null && 
             firestore.get(/databases/(default)/documents/adminUsers/$(request.auth.uid)).data.role in ['admin', 'medico', 'portero'];
    }
    
    match /socios/{userId}/{allPaths=**} {
      // ⚠️ REVERTIDO: Volvemos a lectura pública por problemas en producción
      // TODO: Investigar por qué falla con request.auth != null (¿URLs sin token?)
      allow read: if true;
      allow write: if request.auth != null; // Cualquiera autenticado puede escribir su propia foto
      
      // Permitir update solo a admins (después del signup inicial)
      allow update, delete: if isAdmin();
    }
    
    // Archivos de familiares - Los socios pueden crear, admins pueden todo
    match /socios/{userId}/familiares/{fileName} {
      allow read: if isOwner(userId) || isStaff();
      
      // Permitir create durante solicitud de cambio
      allow create: if isOwner(userId) && request.resource.size < 10 * 1024 * 1024;
      
      // Solo admins pueden actualizar/borrar
      allow update, delete: if isAdmin();
    }
    
    // Archivos de adherentes - Los socios pueden crear, admins pueden todo
    match /socios/{userId}/adherentes/{fileName} {
      allow read: if isOwner(userId) || isStaff();
      
      // Permitir create durante registro de adherente
      allow create: if isOwner(userId) && request.resource.size < 10 * 1024 * 1024;
      
      // Solo admins pueden actualizar/borrar
      allow update, delete: if isAdmin();
    }
    
    // ⭐ Carpeta temporal para solicitudes (TODAS las fotos van aquí primero)
    match /solicitudes-temp/{userId}/{allPaths=**} {
      allow read: if isOwner(userId) || isStaff();
      allow write: if isOwner(userId); // Socios PUEDEN escribir aquí
      allow delete: if isAdmin();
    }
    
    // Novedades
    match /novedades/{fileName} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Todo lo demás: solo admins
    match /{allPaths=**} {
      allow read, write: if isAdmin();
    }
  }
}